{
  "name": "instant-noodles",
  "version": "0.0.3",
  "description": "React components and hooks used to run microwave test suites.",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "private": false,
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup --env.NODE_ENV production --sourcemap --dts --outDir ./dist",
    "dev": "tsup --watch --env.NODE_ENV development --sourcemap --dts --outDir ./dist",
    "lint": "eslint . --ext .ts --ext .tsx --ext .js --ignore-pattern dist",
    "clean:modules": "rm -rf node_modules",
    "clean:build": "rm -rf dist",
    "clean:all": "npm run clean:build && npm run clean:modules",
    "publish:dry-run": "npm publish --dry-run",
    "prepare": "npm run clean:build && npm run build",
    "packlist": "npx npm-packlist"
  },
  "dependencies": {
    "@testing-library/react": "12.1.4",
    "react-microwave": "0.0.1",
    "react": "<18.0.0",
    "react-dom": "<18.0.0",
    "react-test-renderer": "<18.0.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.17.0",
    "@types/node": "^17.0.24",
    "@types/react": "<18.0.0",
    "@types/react-dom": "<18.0.0",
    "@types/react-test-renderer": "<18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.24.0",
    "@typescript-eslint/parser": "^5.24.0",
    "@vitejs/plugin-react": "^1.3.2",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.2.2",
    "ts-jest": "^28.0.2",
    "tsup": "^5.12.8",
    "typescript": "^4.6.4",
    "vite": "^2.9.9"
  },
  "peerDependencies": {
    "react": "<18.0.0",
    "react-dom": "<18.0.0"
  },
  "author": {
    "name": "Jeff Astor",
    "email": "jeff@astor.io"
  },
  "publishConfig": {
    "access": "public"
  }
}
